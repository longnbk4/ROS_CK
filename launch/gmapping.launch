<launch>
  <!-- Tạo odometry từ IMU và encoder -->
  <node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf">
    <remap from="odom" to="odom"/>
    <param name="output_frame" value="odom"/>
    <param name="base_footprint_frame" value="base_link"/>
    <param name="freq" value="30.0"/>
    <param name="sensor_timeout" value="1.0"/>
    <param name="odom_used" value="true"/>
    <param name="imu_used" value="false"/>
    <param name="vo_used" value="false"/>
    <param name="debug" value="false"/>
    <param name="self_diagnose" value="false"/>
  </node>

  <!-- Khởi chạy gmapping node -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping">
    <!-- Các tham số SLAM -->
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>

    <!-- Tần suất cập nhật bản đồ -->
    <param name="map_update_interval" value="1.0"/>
    
    <!-- Số lượng hạt (particles) - giảm xuống để nhẹ hơn -->
    <param name="particles" value="30"/>
    
    <!-- Phạm vi scan (meters) - điều chỉnh phù hợp với room.world -->
    <param name="maxRange" value="12.0"/>
    <param name="maxUrange" value="10.0"/>
    
    <!-- Khoảng cách di chuyển tối thiểu để cập nhật -->
    <param name="linearUpdate" value="0.1"/>
    <param name="angularUpdate" value="0.1"/>
    
    <!-- Độ phân giải của map -->
    <param name="delta" value="0.05"/>
    
    <!-- Thời gian lưu slam (stamped) scans -->
    <param name="temporalUpdate" value="0.5"/>
    
    <!-- Xác suất chiếm chỗ / trống -->
    <param name="minimumScore" value="50"/>
    <param name="srr" value="0.01"/>
    <param name="srt" value="0.02"/>
    <param name="str" value="0.01"/>
    <param name="stt" value="0.02"/>
    
    <!-- Kích thước bản đồ -->
    <param name="xmin" value="-10.0"/>
    <param name="ymin" value="-10.0"/>
    <param name="xmax" value="10.0"/>
    <param name="ymax" value="10.0"/>
  </node>

  <!-- Khởi chạy rviz với file cấu hình cho gmapping -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find xerobotvisai2)/rviz/gmapping.rviz"/>

</launch>